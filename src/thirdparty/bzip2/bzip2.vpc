//-----------------------------------------------------------------------------
//	BZIP2.VPC
//
//	Project Script
//-----------------------------------------------------------------------------

$Macro SRCDIR		"..\.."
$Macro OUTLIBDIR	"$LIBCOMMON"

$Include "$SRCDIR\vpc_scripts\lib_base.vpc"

$Linux
{
		$BuildForLinux 1
}

$Configuration
{
	$Compiler
	{
		$ForceIncludes						" "
		$CompileAs							"Compile as C Code (/TC)"
	}
}

$Project "Bzip2"
{
	$Folder	"Source Files"
	{
		$File	"blocksort.c"
		$File	"bzip2.c"
		$File	"bzlib.c"
		$File	"compress.c"
		$File	"crctable.c"
		$File	"decompress.c"
		$File	"huffman.c"
		$File	"randtable.c"
	}

	$Folder	"Header Files"
	{
		$File	"bzlib.h"
		$File	"bzlib_private.h"
	}
}

